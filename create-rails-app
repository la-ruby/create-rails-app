#!/usr/bin/env bash
set -Eeuo pipefail

init_db() {
  [ -d ~/.cra ] || mkdir ~/.cra
  [ -d ~/.cra/bin ] || mkdir ~/.cra/bin
}

# GLOBALS
export CRA_ROOT="${HOME}/.cra"
export CRA_RAILS_BRANCH="6-0-stable"

# Some packages



init_db
ruby -v


